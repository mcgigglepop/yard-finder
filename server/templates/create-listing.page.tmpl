<div class="contact-page">
  <div class="container">
    <form id="contact" action="" method="get" class="mt-5">
      <div class="row">
        <div class="col-lg-12">
          <div class="inner-content">
            <div class="row">
              <div class="col-lg-6 align-self-center">
                <div class="row">
                  <div class="col-lg-12">
                    <h6 class="mb-2">Listing Title <i class="fa fa-circle-exclamation" data-bs-toggle="tooltip" data-bs-placement="top" title="required"></i></h6>
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., Super Cool Estate Sale"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                        required
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <h6 class="mb-2">Date of Sale <i class="fa fa-circle-exclamation" data-bs-toggle="tooltip" data-bs-placement="top" title="required"></i></h6>
                    <fieldset>
                      <input
                        type="date"
                        name="date"
                        id="date"
                        style="font-weight: 500; color: black"
                        required
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <h6 class="mb-2">Price Range</h6>
                    <fieldset>
                      <select
                        id="options"
                        name="options"
                        style="font-weight: 500; color: black"
                      >
                        <option value="option1">$</option>
                        <option value="option2">$$</option>
                        <option value="option3">$$$</option>
                      </select>
                    </fieldset>
                  </div>
                  <h6 class="mb-2">Sale Location <i class="fa fa-circle-exclamation" data-bs-toggle="tooltip" data-bs-placement="top" title="required"></i></h6>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="address"
                        id="addressone"
                        placeholder="1600 Amphitheatre Pkwy"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                        required
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-6">
                    <fieldset>
                      <input
                        type="text"
                        name="city"
                        id="city"
                        placeholder="Mountain View"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                        required
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-6">
                    <fieldset>
                      <input
                        type="text"
                        name="state"
                        id="state"
                        placeholder="CA"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                        required
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="zipcode"
                        id="zipcode"
                        placeholder="94043"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                        required
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <h6 class="mb-2">Sale Description <i class="fa fa-circle-exclamation" data-bs-toggle="tooltip" data-bs-placement="top" title="required"></i></h6>
                    <fieldset>
                      <textarea
                        name="description"
                        type="text"
                        class="form-control"
                        id="description"
                        placeholder="a brief description about your sale"
                        style="font-weight: 500; color: black"
                        required
                      ></textarea>
                    </fieldset>
                  </div>
                </div>
              </div>
              <div class="col-lg-6 align-self-center mt-5">
                <div class="row">
                  <div class="col-lg-12">
                    <h6 class="mb-2">Item List</h6>
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., baby clothes"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., vintage toys"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., comic books"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., tools"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., lawn equipment"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., furniture"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input
                        type="text"
                        name="title"
                        id="title"
                        placeholder="e.g., clothes"
                        autocomplete="on"
                        style="font-weight: 500; color: black"
                      />
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset class="mt-4">
                      <textarea
                        name="message"
                        type="text"
                        class="form-control"
                        id="message"
                        placeholder="any remaining items separated by a comma (e.g. kitchen tools, electronics, tools...)"
                        style="font-weight: 500; color: black"
                      ></textarea>
                    </fieldset>
                  </div>
                  <div class="col-lg-12" style="text-align: right;">
                    <fieldset>
                      <button
                        type="submit"
                        id="form-submit"
                        class="main-button"
                      >
                        <i class="fa fa-paper-plane"></i> Create Listing
                      </button>
                    </fieldset>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

